<div class="list-container">
  <div class="list-names">
    <h3 class='list-title'>My Lists</h3>
    <ul>
      <li>
        <a href="" class='new-list-link'><i class="fas fa-plus-circle"></i>
          <span class='underline-on-hover'> New List</span>
        </a>
      </li>
      <li class="selected-list">Camping</li>
      <li>International Travel</li>
      <li>Domestic Travel</li>
    </ul>
  </div>
  <div class="checklist">
    <div class='list-title-and-reset-btn'>
      <h2>Camping</h2>
      <a class="reset butn butn-1" href="">Reset</a>
    </div>
    <ul class='to-do-ul'>
      <div class="to-do-and-chkbox">
        <a class="chkbox far fa-circle" href="" tabindex="-1"></a>
        <!-- tabindex -1 so tab doesn't ever select checkbox -->
        <input class='to-do-input' value="Tent">
      </div>
      <div class="to-do-and-chkbox">
        <a class="chkbox far fa-circle" href="" tabindex="-1"></a>
        <input class='to-do-input' value="Canopy">
      </div>
      <div class="to-do-and-chkbox">
        <a class="chkbox far fa-check-circle" href="" tabindex="-1"></a>
        <input class='to-do-input' value="Mattress">
      </div>
    </ul>
    <a class='new-todo-link'><i class="fas fa-plus"></i>
      <span class='underline-on-hover'> New todo</span>
    </a>
  </div>
</div>


<script type="text/javascript">
  $(".to-do-ul").on('keyup', function(e) {
    if (e.keyCode == 13) {
      console.log('pressed enter!');
      $('.to-do-ul').append(`<div class="to-do-and-chkbox">
        <a class="chkbox far fa-circle" href="" tabindex="-1"></a>
        <input class='to-do-input' value="" autofocus>
      </div>`);
    }
  });
  $(".new-todo-link").on('click', function(e) {
      console.log('clicked new todo!');
      $('.to-do-ul').append(`<div class="to-do-and-chkbox">
        <a class="chkbox far fa-circle" href="" tabindex="-1"></a>
        <input class='to-do-input' value="" autofocus>
      </div>`);
  });

</script>
