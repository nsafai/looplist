<div class="">
  <form action="/signup" method="post" class="">
    <h1>Sign Up</h1>
    <p class="helper-text">We promise not send you any junk email.</p>
    <div class="form-group">
      <input type="text" name="name" class="form-control" id="name" placeholder="Name" autocomplete="name" required>
    </div>

    <div class="form-group">
      <label for="user-email" style='display:none'>Email</label>
      <input type="email" name="email" class="form-control" id="user-email" placeholder="Email" autocomplete="email" required>
    </div>

    <div class="form-group">
      <label for="user-password" style='display:none'>Password</label>
      <input type="password" name="password" class="form-control" id="user-password" placeholder="Set Password" autocomplete="new-password" required>
    </div>

    <div class="text-left">
      <button type="submit" class="butn butn-1">Sign Up</button>
    </div>
    <div class="helper-text">
      Already have an account? <a href="/login" class="green">Log in</a>.
    </div>
  </form>
</div>
